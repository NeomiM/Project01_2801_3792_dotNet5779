            <Button Name="TestsByDate" Content="Tests By date" HorizontalAlignment="Stretch" Margin="15,40,15,30" VerticalAlignment="Stretch" Click="TestsByDate_Click"/>
            <Button Name="TraineesByTesters" Content="Trainees by Teachers" HorizontalAlignment="Stretch" Margin="15,40,15,40" VerticalAlignment="Stretch" Click="TraineesByTeachers_Click"/>
            <Button Name="TestersByCarType"  Content="Testers By car type" HorizontalAlignment="Stretch" Margin="15,40,15,40" VerticalAlignment="Stretch" Click="TestersByCarType_Click"/>
        </StackPanel>
        <StackPanel x:Name="middle" DockPanel.Dock="Right" Background="Azure">
            <Image Height="200" Width="200" Source="image.png" Margin="0,100,0,100"/>
        </StackPanel>


    </DockPanel>

