<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.TestersWindow"
        mc:Ignorable="d"
        Title="TestersWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="testerViewSource" d:DesignSource="{d:DesignInstance {x:Type BE:Tester}, CreateList=True}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddTesterButton" Content="Add Tester" Grid.Column="0" Grid.Row="0" Margin="10, 20" Click="AddTesterButton_Click"/>
        <Button x:Name="UpdateTesterButton" Content="Update Tester" Grid.Column="0" Grid.Row="1" Margin="10, 20"/>
        <Button x:Name="DeleteTesterButton" Content="Delete Tester" Grid.Column="0" Grid.Row="2" Margin="10, 20"/>
    </Grid>
</Window>
